<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".change_password">

    <LinearLayout
        android:background="@color/xanh_dam"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Đổi mật khẩu"
            android:textSize="25dp"
            android:textColor="@color/xanh_dam"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Vui lòng nhập thông tin"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <EditText
            android:background="@drawable/shape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint=" Mật khẩu hiện tại"/>

        <EditText
            android:background="@drawable/shape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint=" Mật khẩu mới"/>
        <EditText
            android:background="@drawable/shape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint=" Nhập lại mật khẩu mới"/>
        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_tim"
            android:text="Lưu thay đổi"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp" />

        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/button_button_red"
            android:text="Hủy"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Quên mật khẩu"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>